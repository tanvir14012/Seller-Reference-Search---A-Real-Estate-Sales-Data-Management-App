@model SearchOptionsDto
@{
    ViewData["Title"] = "Search";
}


<div class="card shadow-sm" id="agentsRoot">
    <div class="card-header fw-light bg-light ">
        <div class="d-flex justify-content-between">
            <h3 class="mt-1">Search sales</h3>
        </div>
        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div id="response">
                <div class="border rounded bg-white shadow-sm my-4">
                    <div class="row m-2">
                        <div class="alert @(Model.Errored ? "alert-danger": "alert-success") alert-dismissible fade show" role="alert">
                            <strong>@Model.Message</strong>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    </div>
                </div>
            </div>

        }

        <script type="text/javascript">
            window.searchOptions = @Html.Raw(Model.json);
        </script>
    </div>
    <div class="card-body">
        <div class="me-auto">

        </div>
        <table id="agents" class="table table-striped table-hover w-100">
            <thead>
                <tr>
                    <th>Owner</th>
                    <th>Reference</th>
                    <th>Parcel</th>
                    <th>Acres</th>
                    <th>Offer price</th>
                    <th>Offer PPA</th>
                    <th>Real PPA</th>
                    <th>PPA Calc.</th>
                    <th>Profit</th>
                    <th>Retail value</th>
                    <th>Closing date</th>
                    <th>County</th>
                    <th>State</th>
                    <th>Zip code</th>
                    <th>Uploaded on</th>
                    <th>View</th>
                </tr>
            </thead>

            <tbody>

            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/home.js" type="text/javascript"></script>
}
