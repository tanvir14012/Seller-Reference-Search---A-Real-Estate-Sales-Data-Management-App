@model SaleDto
@{
    ViewData["Title"] = "Sale details";
}

<div class="container mt-5">
   <div class="row justify-content-center align-content-center">
       <div class="col-sm-10 col-md-8 col-lg-6">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center px-lg-5">
                    <span>Sale details</span>
                    <a href="/" class="btn btn-light">Back </a>
                </div>

                <div class="card-body px-lg-5">
                    <h3 class="card-title">Owner: @Model.OwnerName</h3>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-start">
                            <strong>Reference:</strong> <span class="ms-auto">@Model.Reference</span>
                        </li>
                        <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-start">
                            <strong>Parcel Number:</strong> <span class="ms-auto"><i class="fas fa-file-alt me-1"></i> @Model.ParcelNumber</span>
                        </li>
                        <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-start">
                            <strong>Lot Acreage:</strong> <span class="ms-auto">@Model.LotAcreage</span>
                        </li>
                        <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-start">
                            <strong>Offer Price:</strong> <span class="ms-auto">@Model.OfferPrice</span>
                        </li>
                        <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-start">
                            <strong>Offer PPA:</strong> <span class="ms-auto">@Model.OfferPPA</span>
                        </li>
                        <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-start">
                            <strong>PPA Calculation:</strong> <span class="ms-auto">@Model.PPACalc</span>
                        </li>
                        <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-start">
                            <strong>Closing Date:</strong> <span class="ms-auto">@Model.ClosingDate?.ToString("dd/MM/yyyy")</span>
                        </li>
                        <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-start">
                            <strong>Profit:</strong> <span class="ms-auto">@Model.Profit</span>
                        </li>
                        <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-start">
                            <strong>Real PPA:</strong> <span class="ms-auto">@Model.RealPPA</span>
                        </li>
                        <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-start">
                            <strong>Retail Value:</strong> <span class="ms-auto">@Model.RetailValue</span>
                        </li>
                        <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-start">
                            <strong>County:</strong> <span class="ms-auto">@Model.County</span>
                        </li>
                        <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-start">
                            <strong>State:</strong> <span class="ms-auto">@Model.State</span>
                        </li>
                        <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-start">
                            <strong>Zip Code:</strong> <span class="ms-auto">@Model.ZipCode</span>
                        </li>
                        <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-start">
                            <strong>Created At:</strong> <span class="ms-auto">@Model.LastModifiedAt</span>
                        </li>
                    </ul>
                </div>

            </div>
       </div>
   </div>
</div>
